{
  "$schema": "https://platformatic.dev/schemas/v0.20.1/db",
  "server": {
    "hostname": "127.0.0.1",
    "port": 3042,
    "cors": {
      "origin": "localhost:5173",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
    
  },
  "db": {
    "connectionString": "sqlite://./db.sqlite",
    "graphql": true,
    "openapi": true
  },
  "migrations": {
    "dir": "migrations",
    "table": "versions"
  },
  "plugins": {
    "paths": [
      "plugin.js"
    ]
  },
  "types": {
    "autogenerate": true
  }
}
